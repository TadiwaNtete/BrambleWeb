@using Bramble.Models;
@using Bramble.Framework.EnumeratedType;
@model Bramble.Models.DataModels.ClassModels.SingleEntryResponseModel
@{

	@if(Model.DataResponse.Any())
	{
		<h5 style="color:white; margin-left:50px;">Songs of the Day</h5>
		@for (int i = 0; i < Model.DataResponse.Count(); i++)
		{
			//Variable Declaration
			var currentSong = Model.DataResponse[i];
			var currentEntryIDKey = 
			$@"{EntryIdentifiers.Song}-{currentSong.SONG_NAME}-{currentSong.SONG_AUTHOR}-{currentSong.SONG_ID}";

			//End

			<div class="entry-container" onclick="FnDirect('BramblePlayer', 'SongPlayer', 'identifierKey', `@currentEntryIDKey`)" style="cursor:pointer;">
				<div class="dark-bubble">
					<div class="images">
						<img src="@Url.Content(currentSong.IMAGE_PATH)" />
						<p class="image-first-line">@currentSong.SONG_NAME</p>
						<p class="image-second-line">@currentSong.SONG_AUTHOR</p>
					</div>
				</div>
			</div>


		}
	}
	else
	{
		<h5 style="color:white; margin-left:50px;">No recommended songs</h5>
	}
}

@section Scripts
	{
	<script src="Scripts\CommonScript.js" type="text/javascript"></script>
}
